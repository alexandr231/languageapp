<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/main">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/back"
            android:layout_width="17dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/back"
            android:text="Listening"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="cucumber"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textPronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textWord"
            android:layout_centerHorizontal="true"
            android:text="[ 'kju:kʌmbə ]"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textHint"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPronunciation"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:text="Please press button and say this word. Our service will check your pronunciation"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="22sp" />


        <android.widget.Button
            android:id="@+id/buttonCheck"
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:layout_below="@+id/textHint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/nextbutton"
            android:text="Check my speech"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>
</LinearLayout>